<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
<!--    이상하게 여기다가 적는 properties는 적용이 안되고, application.properties 파일에 적어야 적용이 되더라-->
<!--    경로 설정을 안해줘서 그럴 수도 있으니 나중에 필요하면 확인해 볼 것 -->
    <settings>
<!--        언더바 형식(SnakeCase)의 필드명을 CamelCase로 변환-->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
<!--        쿼리 결과 필드가 null인 경우, 누락이 되서 나오게 되는데, 이를 방지하여 누락이 안되게 하는 설정-->
        <setting name="callSettersOnNulls" value="true"/>
<!--        쿼리에 보내는 파라미터가 null인 경우, 오류 발생 방지-->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>
</configuration>