<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.mapper.AlarmMapper">
    <select id="selectByReceiver">
        select
            *
        from
            tb_alarm
        where
            receiver=#{receiver}
    </select>

    <insert id="insert" parameterType="com.momo.vo.AlarmVO">
        insert into
            tb_alarm
        (sender, receiver, alarm_tp, content)
        values
            (#{sender},#{receiver},#{alarmTp},#{content})

    </insert>

</mapper>