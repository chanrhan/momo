<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.mapper.EmployeeMapper">
    <select id="selectById">
        select
            *
        from
            tb_emp
        where
            id=#{id}
    </select>

    <select id="select">
        select
        *
        from
        tb_emp
        where
            ${qs}
    </select>

    <select id="search" parameterType="com.momo.vo.CommonVO">
        select
            *
        from
        tb_emp
        where
            ${andSelect} and
            ${orSearch}
        ${prop}
    </select>


    <select id="selectAll">
        select
            *
        from
            tb_emp
    </select>

    <insert id="insert" parameterMap="java.util.Map">
        insert into
            tb_emp
            (id, role, b_no, shop_cd)
        VALUES
            (#{id},#{role},#{b_no},#{shop_cd})
    </insert>

    <update id="update" parameterMap="java.util.Map">
        update
            tb_emp
        set
            shop_cd=#{shop_cd},
            approval_st=#{approval_st}
        where
            id=#{id}
    </update>

    <update id="updateShop" parameterMap="java.util.Map">
        update
            tb_emp
        set
            shop_cd=#{shop_cd}
        where
            id=#{id}
    </update>

    <delete id="delete" parameterMap="java.util.Map">
        delete from
            tb_emp
        where
            id=#{id}
    </delete>

</mapper>