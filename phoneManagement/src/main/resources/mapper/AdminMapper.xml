<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.mapper.AdminMapper">
    <select id="search" parameterType="com.momo.dto.AdminDTO">
        select
            *
        from
            tb_admin
        where
        <if test='id != null and !id.equals("")'>
            admin_id=#{id} and
        </if>
        <if test='pwd != null and !pwd.equals("")'>
            admin_pwd=#{pwd} and
        </if>
        <if test='email != null and !email.equals("")'>
            admin_email=#{email} and
        </if>
        <if test='name != null and !name.equals("")'>
            admin_nm=#{name} and
        </if>
        <if test='tel != null and !tel.equals("")'>
            admin_tel=#{tel} and
        </if>
            1 = 1
        <if test='targetColumn != null and !targetColumn.equals("")'>
            and ${targetColumn} like '%${keyword}%'
        </if>
        <if test='orderby != null and !orderby.equals("")'>
            order by
            ${orderby}
        </if>
        <if test='limit != null and limit gt 0'>
            limit
            ${offset},${limit}
        </if>
    </select>

    <select id="selectById" resultType="com.momo.vo.AdminVO">
        select
            *
        from
            tb_admin
        where
            admin_id=#{id}
    </select>

    <select id="selectAll">
        select
            *
        from
            tb_admin;
    </select>

    <insert id="insert" parameterType="com.momo.dto.AdminDTO">
        insert into
            tb_admin
            (admin_id,
             admin_pwd,
             admin_nm,
             admin_email,
             admin_tel)
        values
            (#{id},#{pwd},#{name},#{email},#{tel})
    </insert>

    <update id="update" parameterType="com.momo.dto.AdminDTO">
        update
            tb_admin
        set
            admin_nm=#{name},
            admin_email=#{email},
            admin_tel=#{tel}
        where
            admin_id=#{id}
    </update>

    <update id="updatePassword" parameterType="com.momo.dto.AdminDTO">
        update
        tb_admin
        set
            admin_pwd=#{updatePwd}
        where
            admin_id=#{id} and
            admin_pwd=#{pwd}
    </update>

    <delete id="delete" parameterType="com.momo.dto.AdminDTO">
        delete from
                   tb_admin
               where
                   admin_id=#{id}
    </delete>

</mapper>